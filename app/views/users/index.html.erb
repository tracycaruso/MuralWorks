<% provide(:title, "User Directory") %>
<% content_for :body_class, "user_view" %>


<div class="row">
  <div class="columns large-12">
    <h3> User Directory </h3>
  </div>
</div>


<% @users.each do |user| %>
  <div class="row">
    <div class="columns large-2 user-photo">
      <%= image_tag user.image_url %>
    </div>
    <div class="columns large-10">
      <h4><%= link_to user.user_name, user_path(user) %></h4>
      <% if !current_user.nil? && current_user.admin? %>
        <h4><%= link_to "Delete", user_path(user), method: "delete", data: { confirm: "You sure?" }  %></h4>
      <% end %>
    </div>
  </div>
<% end %>
